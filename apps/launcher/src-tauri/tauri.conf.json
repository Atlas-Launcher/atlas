{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Atlas Launcher",
  "version": "0.1.0",
  "identifier": "com.atlas.launcher",
  "build": {
    "beforeBuildCommand": "pnpm build",
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Atlas Launcher",
        "width": 1040,
        "height": 720,
        "minWidth": 900,
        "minHeight": 640,
        "resizable": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "trafficLightPosition": {
          "x": 20,
          "y": 24
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": [
          "atlas"
        ]
      }
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQ0NjU5NjIzMTUxQTk1RDUKUldUVmxSb1ZJNVpsUkp4UjVtcTNaTG1Pb2tka0JFalJiMUFpQUtNTjE4dFM1SnpPMm84NWQrdTcK",
      "endpoints": [
        "https://atlas.nathanm.com/download/app/update/{{target}}/{{arch}}/{{current_version}}"
      ]
    }
  }
}