{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Atlas Launcher",
  "version": "0.1.0",
  "identifier": "com.atlas.launcher",
  "build": {
    "beforeBuildCommand": "pnpm build",
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Atlas Launcher",
        "width": 1040,
        "height": 720,
        "visible": false,
        "minWidth": 900,
        "minHeight": 640,
        "resizable": true,
        "fullscreen": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "trafficLightPosition": {
          "x": 20,
          "y": 24
        }
      },
      {
        "label": "loading",
        "title": "Launching Atlas",
        "width": 420,
        "height": 260,
        "resizable": false,
        "decorations": false,
        "visible": false,
        "fullscreen": false,
        "maximizable": false,
        "minimizable": false,
        "transparent": false,
        "center": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "url": "loading.html"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": [
          "atlas"
        ]
      }
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEMzMzcyMjVCQTYwMkU1NjYKUldSbTVRS21XeUkzdytkUytwdU05a0JUdHZVd25kaU51Z09wZ3BLYjNTeWhybzUwZnQxdDkvaEkK",
      "endpoints": [
        "https://atlas.nathanm.org/api/v1/launcher/updates/{{target}}/{{arch}}"
      ]
    }
  }
}
